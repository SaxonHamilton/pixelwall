{
  "extends": "ts-node/node16/tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "types": ["node", "hardhat"]
  },
  "include": ["hardhat.config.ts", "deploy", "tasks", "test", "scripts", "types"],
  "exclude": ["dist", "node_modules"]
}

